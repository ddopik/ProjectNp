<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/channels_layout" />

    <LinearLayout
        android:id="@+id/channels_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_splash_white_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:src="@drawable/ic_mega_splash" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/logos_white_background_height"
            android:layout_gravity="bottom"
            android:background="@color/grey_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:src="@drawable/ic_radioits_splash" />

        <View
            android:layout_width="@dimen/dp2"
            android:layout_height="78dp"
            android:layout_gravity="bottom"
            android:background="@color/grey_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:src="@drawable/ic_nagham_splash" />

        <View
            android:layout_width="@dimen/dp2"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            android:background="@color/grey_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:src="@drawable/ic_95_splash" />
    </LinearLayout>
</RelativeLayout>