<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/channel_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/show_image_height" />

            <TextView
                android:id="@+id/about_channel_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp8"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textColor="@color/black"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Praesent ullamcorper feugiat nisi nec consectetur. Nulla eu eros sapien. Nullam hendrerit volutpat volutpat. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum lacinia nisl vel nulla condimentum iaculis. Suspendisse ante diam, interdum at viverra eu, volutpat nec ante. Nunc porta diam massa, at posuere tellus luctus eu." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/circle_image_background_dimen"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp32">

                <ImageView
                    android:id="@+id/facebook_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_fb_black" />

                <ImageView
                    android:id="@+id/twitter_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_twitter_black" />


                <ImageView
                    android:id="@+id/instagram_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_instagram_black" />

                <ImageView
                    android:id="@+id/youtube_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_youtube_black" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>