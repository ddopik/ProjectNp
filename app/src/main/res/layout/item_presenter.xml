<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/arrow_image"
        android:layout_toStartOf="@id/arrow_image">

        <ImageView
            android:id="@+id/presenter_image"
            android:layout_width="@dimen/circular_image_size"
            android:layout_height="@dimen/circular_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:layout_toEndOf="@id/presenter_image"
            android:layout_toRightOf="@id/presenter_image"
            android:orientation="vertical">

            <com.spade.nrc.ui.CustomViews.CustomTextView
                android:id="@+id/presenter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="A7la 7 el sa3a sb3a" />

            <com.spade.nrc.ui.CustomViews.CustomTextView
                android:id="@+id/show_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                tools:text="Osam Mounir" />
        </LinearLayout>
    </RelativeLayout>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/arrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_right_arrow" />
</RelativeLayout>